#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

&lt {
    tapping-term-ms = <200>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

/ {
    macros {
        To1_macro: To1_macro {
            compatible = "zmk,behavior-macro";
            label = "To1_macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_EFF &rgb_ug RGB_COLOR_HSB(128,100,50) &to 1>;
        };

        To0_macro: To0_macro {
            compatible = "zmk,behavior-macro";
            label = "To0_macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_EFR &to 0>;
        };

        To2_macro: To2_macro {
            compatible = "zmk,behavior-macro";
            label = "To2_macro";
            #binding-cells = <0>;
            bindings =
                <&to 2>,
                <&macro_wait_time 30>,
                <&rgb_ug RGB_COLOR_HSB(250,100,50)>;
        };

        mac_screen: macos_screenshot {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kt LS(RIGHT_GUI) &kp NUMBER_4 &kt LS(RGUI)>;
            label = "MACOS_SCREENSHOT";
        };

        maccy: maccy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kt LS(RIGHT_GUI) &kp C &kt LS(RIGHT_GUI)>;
            label = "MACCY";
        };

        p2: p2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp LS(A) &kp A>;
            label = "P2";
        };

        switch_win: switch_win {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kt LG(TILDE) &kt LG(TILDE)>;
            label = "SWITCH_WIN";
        };
    };

    behaviors {
        th: th {
            compatible = "zmk,behavior-hold-tap";
            label = "Tap-Hold-250";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <250>;
        };
    };

    combos {
        compatible = "zmk,combos";

        left_parentsies {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <27 27 28>;
        };

        Right_parenthesistt {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <27 29>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        QWERTY {
            bindings = <
&maccy            &kp N1  &kp N2          &kp N3     &kp N4            &kp N5       &kp N6     &kp N7             &kp N8     &kp N9           &kp N0    &mac_screen
&kp TAB           &kp Q   &kp W           &kp E      &kp R             &kp T        &kp Y      &kp U              &kp I      &kp O            &kp P     &kp CAPSLOCK
&kp LEFT_CONTROL  &kp A   &th LEFT_GUI S  &kp D      &th LEFT_SHIFT F  &lt 1 G      &kp H      &th RIGHT_SHIFT J  &kp K      &th RIGHT_GUI L  &kp SEMI  &kp SQT
&kp LEFT_SHIFT    &kp Z   &kp X           &kp C      &kp V             &lt 2 B      &kp N      &kp M              &kp COMMA  &kp DOT          &kp FSLH  &kp ESC
                                          &kp LC(B)  &lt 3 SPACE       &mo 6        &kp RGUI   &kp BACKSPACE
                                                     &mo 5             &kp ENTER    &kp SPACE
            >;
        };

        F_layers {
            bindings = <
&kp F1  &kp F2  &kp F3  &kp F4  &kp F5  &kp F6        &kp F7     &kp F8     &kp F9    &kp F10       &kp F11    &kp F12
&trans  &none   &none   &none   &none   &trans        &none      &none      &none     &kp UP_ARROW  &kp MINUS  &kp EQUAL
&trans  &none   &none   &none   &none   &trans        &mkp LCLK  &mkp RCLK  &kp LEFT  &kp DOWN      &kp RIGHT  &trans
&trans  &trans  &trans  &trans  &trans  &none         &none      &none      &trans    &trans        &none      &trans
                        &trans  &trans  &To0_macro    &mkp LCLK  &mkp RCLK
                                &trans  &trans        &trans
            >;
        };

        BT_layers {
            bindings = <
&trans  &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &trans      &trans  &trans  &trans  &trans  &trans
&trans  &trans          &trans        &trans        &trans        &trans          &trans      &trans  &trans  &trans  &trans  &trans
&trans  &bt BT_CLR_ALL  &trans        &trans        &trans        &trans          &trans      &trans  &trans  &trans  &trans  &trans
&trans  &trans          &trans        &bt BT_CLR    &trans        &trans          &bt BT_NXT  &trans  &trans  &trans  &trans  &trans
                                      &trans        &trans        &trans          &trans      &trans
                                                    &trans        &trans          &trans
            >;
        };

        scroll-layers {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans
                                &trans  &trans    &trans
            >;
        };

        snipe-layers {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans     &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans     &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &mkp LCLK  &mkp RCLK  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans     &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &mkp LCLK  &mkp RCLK
                                &trans  &trans    &trans
            >;
        };

        corne_layer {
            bindings = <
&trans  &trans            &trans            &trans            &trans        &p2              &trans         &trans        &trans        &trans        &trans             &trans
&trans  &kp NUMBER_1      &kp NUMBER_2      &kp NUMBER_3      &kp NUMBER_4  &kp N5           &kp NUMBER_6   &kp N7        &kp N8        &kp N9        &kp N0             &trans
&trans  &kp LS(NUMBER_1)  &kp LS(NUMBER_2)  &kp LS(NUMBER_3)  &kp LS(N9)    &kp LS(N0)       &kp MINUS      &kp EQUAL     &kp LBKT      &kp RBKT      &kp BACKSLASH      &trans
&trans  &kp LS(QUESTION)  &kp LS(ASTERISK)  &trans            &kp TILDE     &kp RS(TILDE)    &kp LS(MINUS)  &kp RS(PLUS)  &kp LS(LBKT)  &kp LS(RBKT)  &kp LS(BACKSLASH)  &switch_win
                                            &trans            &trans        &trans           &trans         &trans
                                                              &trans        &trans           &trans
            >;
        };

        media {
            bindings = <
&trans  &trans  &trans      &trans            &trans      &trans               &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans      &trans            &trans      &trans               &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &kp C_PREV  &kp C_PLAY_PAUSE  &kp C_NEXT  &kp C_VOLUME_UP      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans      &trans            &trans      &kp C_VOLUME_DOWN    &trans  &trans  &trans  &trans  &trans  &trans
                            &trans            &trans      &trans               &trans  &trans
                                              &trans      &trans               &trans
            >;
        };
    };
};
